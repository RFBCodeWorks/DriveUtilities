<Window x:Class="RFBCodeWorks.DriveUtilities.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFBCodeWorks.DriveUtilities.WPF"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=local:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,3" />
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Grid.Row" Value="4"/>
            <Setter Property="Grid.Column" Value="1"/>
        </Style>
        <Style x:Key="ListBoxHeader" TargetType="TextBlock">
            <Setter Property="Grid.Row" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel collection of drives -->
        <Grid Grid.IsSharedSizeScope="True" ShowGridLines="False" HorizontalAlignment="Stretch" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="RootDirCol"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="AvailableSizeCol"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Seperator"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="TotalSizeCol"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="5" Grid.Column="1" >
                <TextBlock Text="Please select the Removable Drive to evaluate" HorizontalAlignment="Center" Margin="0,10,0,2"/>
                <TextBlock Text="Note that when locked, the System.IO.DriveInfo object cannot get data from the system!" HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="5" Grid.Column="1" Margin="0,0,0,10"/>
            </StackPanel>
            <TextBlock Text=" Drive Letter" Grid.Column="1" Style="{StaticResource ListBoxHeader}"/>
            <TextBlock Text="Available Space" Grid.Column="2" Margin="20,0,0,0" HorizontalAlignment="Right" Style="{StaticResource ListBoxHeader}"/>
            <TextBlock Text="  /  " Grid.Column="3" HorizontalAlignment="Center" Style="{StaticResource ListBoxHeader}"/>
            <TextBlock Text="Total Space" Grid.Column="4" HorizontalAlignment="Left" Style="{StaticResource ListBoxHeader}"/>
            <TextBlock Text=" (bytes)" Grid.Column="5" HorizontalAlignment="Left"  Style="{StaticResource ListBoxHeader}"/>
            <ListBox 
     ItemsSource="{Binding Drives}" 
     SelectedItem="{Binding SelectedDrive}" 
     HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="RootDirCol"/>
                                <ColumnDefinition SharedSizeGroup="AvailableSizeCol"/>
                                <ColumnDefinition SharedSizeGroup="Seperator"/>
                                <ColumnDefinition SharedSizeGroup="TotalSizeCol"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding UsbDrive.DriveInfo.RootDirectory}" Grid.Column="0" />
                            <TextBlock Text="{Binding UsbDrive.DriveInfo.AvailableFreeSpace}" Grid.Column="1" HorizontalAlignment="Right" />
                            <TextBlock Text="/" Grid.Column="2" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding UsbDrive.DriveInfo.TotalSize}" Grid.Column="3" HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Refresh Removable Drives" Command="{Binding RefreshDrivesCommand}" Style="{StaticResource ButtonStyle}"
     HorizontalAlignment="Center"  Padding="10,0" 
     />
        </Grid>
        
        <!-- Right Side -->
        <Grid Grid.Column="1" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" Name="DeviceDeatilsRow"/>
                <RowDefinition Height="Auto" Name="ButtonRow0"/>
                <RowDefinition Height="Auto" Name="ButtonRow1"/>
                <RowDefinition Height="Auto" MaxHeight="450" />
                <RowDefinition Height="*" Name="FormatLogRow"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="btnColA"/>
                <ColumnDefinition Width="auto" SharedSizeGroup="btnColA"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Device Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" MinWidth="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Drive Letter: "/>
                            <TextBlock Text="{Binding SelectedDrive.UsbDrive.Root}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Drive Name: "/>
                            <TextBlock Text="{Binding SelectedDrive.UsbDrive.DriveInfo.VolumeLabel}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Drive Format: "/>
                            <TextBlock Text="{Binding SelectedDrive.UsbDrive.DriveInfo.DriveFormat}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <CheckBox Content="IsMounted" IsChecked="{Binding SelectedDrive.UsbDrive.IsMounted, Mode=OneWay}" IsEnabled="False"/>
                        <CheckBox Content="IsLocked" IsChecked="{Binding SelectedDrive.UsbDrive.IsLocked, Mode=OneWay}" IsEnabled="False"/>
                        <CheckBox Content="IsExclusiveMode " IsChecked="{Binding SelectedDrive.UsbDrive.IsExclusiveMode, Mode=OneWay}" IsEnabled="False"/>
                        <CheckBox Content="IsRemovalPrevented " IsChecked="{Binding SelectedDrive.UsbDrive.IsRemovalPrevented, Mode=OneWay}" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Button Grid.Row="1" Grid.Column="0" Content="Lock" Command="{Binding SelectedDrive.LockCommand}" Style="{StaticResource ButtonStyle}" />
            <Button Grid.Row="1" Grid.Column="1" Content="Unlock" Command="{Binding SelectedDrive.UnlockCommand}" Style="{StaticResource ButtonStyle}" />
            <Button Grid.Row="2" Grid.Column="0" Content="Dismount" Command="{Binding SelectedDrive.DismountCommand}" Style="{StaticResource ButtonStyle}" />
            <Button Grid.Row="2" Grid.Column="1" Content="Eject" Command="{Binding SelectedDrive.EjectCommand}" Style="{StaticResource ButtonStyle}" />
            <Button Grid.Row="1" Grid.Column="3" Content="Toggle Exclusive Mode" Command="{Binding SelectedDrive.ToggleExclusiveModeCommand}" Style="{StaticResource ButtonStyle}" />
            <Button Grid.Row="2" Grid.Column="3" Content="Open Directory" Command="{Binding OpenWindowsExplorerCommand}" Style="{StaticResource ButtonStyle}" />

            <ComboBox Grid.Row="1" Grid.Column="2" Name="FSCMB" ItemsSource="{Binding FileSystemFormats}" SelectedItem="{Binding SelectedFormat}"  Margin="10,0" VerticalAlignment="Bottom" />
            <Button Grid.Row="2" Grid.Column="2"  Grid.ColumnSpan="1"
                    Content="Format Selected Drive" ToolTip="Format the selected drive. Note that FAT has a maximum size of 2GB."
                    Command="{Binding SelectedDrive.FormatDriveCommand}" CommandParameter="{Binding ElementName=FSCMB, Path=SelectedItem}" 
                    Style="{StaticResource ButtonStyle}"  HorizontalAlignment="Center" Padding="10" 
                    />

            <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="10" Margin="10,0,10,10" MaxHeight="150"
                    Header="Diagnostic Log" VerticalAlignment="Stretch" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding SelectedDrive.DiagnosticLog}" />
                </ScrollViewer>
            </GroupBox>
            <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" Margin="10,0,10,10" MaxHeight="600"
                Header="Format Log" VerticalAlignment="Stretch" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding SelectedDrive.FormatLog}" />
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
